<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <table>
        <thead>
            <th colspan="3"><%= tasks[0].name %></th>
        </thead>
        <tbody>
            <% let count = 1;
            tasks.forEach((task) => { %>
                <tr>
                    <td>
                        <%= `${count}`%>
                    </td>
                        <% count+=1 %>
                    <td>
                        <a href=" <%= ` /task/${task.id} ` %> "><%= `${task.description}` %></a>
                    </td>
                    <td>
                        <form action= "<%= `/task_lists/${tasks[0].id}/task/${task.id}/delete` %>", method="get">
                            <input type="submit" formmethod="delete" value="Supprimer" />
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>


    <h1> <%= tasks[0].name %></h1>

    <form action="<%= ` /task_lists/${tasks[0].id}/tasks ` %>" method="POST">
        <label for="description"> Description de la nouvelle t√¢che:</label>
        <input type="text" name="description", maxlength="500" />
        <input type="submit" value="Ajouter"/>
      </form>

    <ol>
        <% tasks.forEach((task) => { %>
        <li>
            <a href=" <%= ` /task/${task.id} ` %> "><%= `${task.description}` %></a>
            <form action= "<%= `/task_lists/${tasks[0].id}/task/${task.id}/delete` %>", method="get">
                <input type="submit" formmethod="delete" value="Supprimer" />
              </form>
        </li>
        <% }) %>
    </ol>
</body>
</html>